<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <% if user_signed_in? %>
          <td><%= post.user.email %></td>
        <% end %>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<% if !user_signed_in? %>
  <%= link_to 'Sign In', new_user_session_path %>
<% else %>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% end %>
